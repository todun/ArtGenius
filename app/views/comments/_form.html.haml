= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :x1
    = f.number_field :x1
  .field
    = f.label :x2
    = f.number_field :x2
  .field
    = f.label :y1
    = f.number_field :y1
  .field
    = f.label :y2
    = f.number_field :y2
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :image_id
    = f.number_field :image_id
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
