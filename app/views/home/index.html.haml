%body#collage

.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
	.container
		.navbar-header
			%button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
		.navbar-collapse.collapse
			%form.navbar-form.navbar-right
				= form_tag user_session_path do
					= text_field_tag 'user[email]'
					= password_field_tag 'user[password]'
					= check_box_tag 'user[remember_me]'
					= label_tag 'user[remember_me]', 'Remember me'
					%button Sign in
					= link_to "Forgot your password?", new_password_path('user')







.jumbotron
	.container.center
		%h1#header-main Art Genius
		
		.container.spacer
			%p An Art History lesson whenever you want
			.row.spacer
				.col-sm-4
				.col-sm-2
					%a.btn.btn-outline-inverse.btn-lg{role: "button"} Sign Up!
				.col-sm-2
					%a.btn.btn-outline-inverse.btn-lg{role: "button"} Log In!
				.col-sm-4
		

