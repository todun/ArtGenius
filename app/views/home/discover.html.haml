:javascript 
	$(document).ready(function(){
		$('#homeLink').click(function() {
			window.location.href = "#{root_url}";
		});
	});



.navbar.navbar-inverse.navbar-fixed-top#blue-nav{role: "navigation"}
	.container
		.navbar-header#homeLink{:onclick => "function(){window.location.href='#{root_url}'};", :style =>  "display:block"}
			%button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			%a.navbar-brand Art Genius
		.navbar-collapse.collapse
			.navbar-right
				= link_to "sign out", destroy_user_session_path, method: :delete
.container.spacer
	
	.row
		%h3.lobster-header Discover
		.glyphicon.glyphicon-globe
	.row.spacer-mini
		- @images.each do |image|
			.col-sm-4
				.tile
					= link_to(image_tag(image.image), image)

